class Solution {
    public int reverse(int n) {
        int rem;
        long rev=0;
        while(n!=0)
        {
            rem=n%10;
            rev=rev*10+rem;
            n=n/10;
        }
        if(rev>Integer.MAX_VALUE || rev<Integer.MIN_VALUE) return 0; // check range if r is outside the range then return 0  
        return (int)rev;  // if r in the 32 bit range then return r
}
}
